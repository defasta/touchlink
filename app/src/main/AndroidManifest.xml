<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.eduraya.edurayaapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="apps.eduraya.edurayaapp.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.EdurayaApp">
        <activity
            android:name="apps.eduraya.edurayaapp.ui.auth.forgot_password.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name="apps.eduraya.edurayaapp.ui.auth.forgot_password.RequestResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name="apps.eduraya.edurayaapp.ui.profile.EditProfileActivity"
            android:exported="true" />

        <activity android:name="apps.eduraya.edurayaapp.ui.auth.AuthActivity" />
        <activity android:name="apps.eduraya.edurayaapp.ui.home.HomeActivity" />
        <activity
            android:name="apps.eduraya.edurayaapp.ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>